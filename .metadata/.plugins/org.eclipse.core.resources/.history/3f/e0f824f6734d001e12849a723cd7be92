package com.goldilocks;

import java.util.Scanner;

public class InputAndOutput {

	public static void main(String[] args) {
		Scanner sr=new Scanner(System.in);
		
	
		System.out.println("If You Wants to exists this problem please write cancel");
		
		System.out.print("Give your input to Print : ");
		String input = sr.nextLine();
		do{
			System.out.println(input);
			input = sr.nextLine();
		}while(!(input.toUpperCase().equals("CANCEL")));
		
		System.out.println("Program is close successfully");
	}
	
}
